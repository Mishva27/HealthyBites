<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="24dp"
    android:gravity="center">

    <Button android:id="@+id/btnAddMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Meal" />

    <Button android:id="@+id/btnMealHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Meal History"
        android:layout_marginTop="16dp" />

    <Button android:id="@+id/btnNutritionInsights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition Insights"
        android:layout_marginTop="16dp" />
</LinearLayout>
